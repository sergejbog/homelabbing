DOMAIN_NAME=your-domain.com

# Required key for platform encryption/decryption ops
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=generate-with-openssl-rand-hex-16

# Required secret to sign JWT tokens
# Generate with: openssl rand -hex 16
AUTH_SECRET=generate-with-openssl-rand-hex-16

# Postgres
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_USER=infisical
POSTGRES_DB=infisical
DB_CONNECTION_URI=postgres://infisical:your-postgres-password@db:5432/infisical

# Redis
REDIS_URL=redis://infisical-redis:6379

# Website URL
SITE_URL=https://secrets.your-domain.com

# Mail/SMTP
SMTP_FROM_NAME="Infisical"
SMTP_HOST="smtp.your-smtp-provider.com"
SMTP_PORT="587"
SMTP_SECURITY="starttls"
SMTP_USERNAME="postmaster@mail.your-domain.com"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM_ADDRESS="postmaster@mail.your-domain.com"

# GitHub App connection (optional - for secret sync to GitHub)
INF_APP_CONNECTION_GITHUB_APP_CLIENT_ID="your-github-app-client-id"
INF_APP_CONNECTION_GITHUB_APP_CLIENT_SECRET="your-github-app-client-secret"
INF_APP_CONNECTION_GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----\n"
INF_APP_CONNECTION_GITHUB_APP_SLUG="your-github-app-slug"
INF_APP_CONNECTION_GITHUB_APP_ID="your-github-app-id"

# Optional integrations (uncomment as needed)
# CLIENT_ID_GITHUB=
# CLIENT_SECRET_GITHUB=
# CLIENT_ID_GOOGLE_LOGIN=
# CLIENT_SECRET_GOOGLE_LOGIN=
# SENTRY_DSN=
